<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">



 <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"></fragment>

    <Button
        android:id="@+id/btnliveLocation"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="53dp"
        android:background="@mipmap/icon_gps" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:elevation="10dp"
        android:background="@drawable/white_boader"
        android:id="@+id/rellayout1">


        <EditText
            android:id="@+id/txtMapSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btnSearch"
            android:layout_toStartOf="@+id/btnSearch"
            android:background="@null"
            android:hint="Enter City, Location"
            android:imeOptions="actionSearch"
            android:textColor="#000"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@mipmap/icon_magnifier" />


    </RelativeLayout>

    <!--  <ImageView
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          android:scaleType="centerCrop"
          android:id="@+id/icon_gps"
          android:src="@mipmap/icon_gps"
          android:layout_marginTop="19dp"
          android:layout_below="@+id/rellayout1"
          android:layout_alignParentStart="@+id/rellayout1" />-->


</RelativeLayout>